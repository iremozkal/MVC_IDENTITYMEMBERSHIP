@{
    Layout = null;
}

@using IDENTITY_MEMBERSHIP.Models.AccountVM;
@model RegisterVM

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Assets/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Assets/Content/bootstrap-grid.css" rel="stylesheet" />
    <script src="~/Assets/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Assets/Scripts/bootstrap.js"></script>
    <title>Register</title>
    <style type="text/css">
        .validationMessage ul {
            text-decoration: none;
            list-style-type: none;
            color: red;
            padding-left: 28px;
        }
    </style>
</head>
<body>
    <div class="col-md-6 offset-md-3" style="margin-top: 5%">
        <div class="card">
            <div class="card-header text-center text-white bg-primary">REGISTER</div>
            <div class="card-body">
                <div class="container">
                    <div class="row validationMessage">
                        @Html.ValidationSummary(false, "", new { @class = "row" })
                    </div>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        <div class="row" style="margin-top: 15px">
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.UserName)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row" style="margin-top: 15px">
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.FirstName)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row" style="margin-top: 15px">
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.LastName)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row" style="margin-top: 15px">
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.Email)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email" })
                            </div>
                        </div>
                        <div class="row" style="margin-top: 15px">
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.Password)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
                            </div>
                        </div>
                        <div class="row" style="margin-top: 15px">
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.ConfirmPassword)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", @type = "password" })
                            </div>
                        </div>
                        <div class="col-md-12 text-right" style="margin: 15px">
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-warning" })
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
